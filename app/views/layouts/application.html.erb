<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= full_title @title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2">
        <ul class="thumbnails">
          <li class="span3 tile tile-teal">
            <%= link_to root_path do %>
              <h1>home</h1>
            <% end %>
          </li>
          <li class="span3 tile tile-orange">
            <%= link_to windows_applications_path do %>
              <h1>win</h1>
            <% end %>
          </li>
          <li class="span3 tile tile-blue">
            <%= link_to web_applications_path do %>
              <h1>web</h1>
            <% end %>
          </li>
          <li class="span3 tile tile-red">
            <%= link_to about_path do %>
              <h1>about</h1>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="span10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
